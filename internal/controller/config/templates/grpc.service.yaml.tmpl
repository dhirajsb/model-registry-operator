apiVersion: v1
kind: Service
metadata:
  name: model-registry-grpc-{{.Name}}
  namespace: {{.Namespace}}
  labels:
    app: model-registry-grpc-{{.Name}}
    component: model-registry
    registry: {{.Name}}
spec:
  ports:
    - name: grpc-api
      port: {{.Spec.Grpc.Port}}
      protocol: TCP
  selector:
    app: model-registry-grpc-{{.Name}}
    component: model-registry
    registry: {{.Name}}
  type: ClusterIP
